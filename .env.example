# ===========================================
# KARUÁ CRM - CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================

# Configurações da Aplicação
NODE_ENV=development
PORT=3000

# Configurações do Banco de Dados PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=karua_user
DB_PASSWORD=karua_password
DB_DATABASE=karua_crm
DB_SYNCHRONIZE=true
DB_LOGGING=true

# URL completa do banco (alternativa às configurações acima)
DATABASE_URL=postgresql://karua_user:karua_password@postgres:5432/karua_crm

# Configurações do Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Configurações de Autenticação JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Configurações de Log
LOG_LEVEL=debug
